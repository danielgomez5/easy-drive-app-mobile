<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Modifica el cotxe"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="?colorPrimary"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="16dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider"
            android:layout_marginBottom="16dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp"
            android:weightSum="2">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:hint="Marca"
                app:boxBackgroundMode="filled"
                app:boxBackgroundColor="?colorSecondaryContainer">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etMarca"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="?colorOnSecondaryContainer"
                    android:inputType="textCapWords" />
            </com.google.android.material.textfield.TextInputLayout>

            <Space
                android:layout_width="8dp"
                android:layout_height="wrap_content" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:hint="Model"
                app:boxBackgroundMode="filled"
                app:boxBackgroundColor="?colorSecondaryContainer">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etModel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="?colorOnSecondaryContainer"
                    android:inputType="textCapWords" />
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Any"
            android:layout_marginBottom="8dp"
            app:boxBackgroundMode="filled"
            app:boxBackgroundColor="?colorSecondaryContainer">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etAny"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="?colorOnSecondaryContainer"

                android:inputType="number" />
        </com.google.android.material.textfield.TextInputLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp"
            android:weightSum="2">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:hint="Tipus"
                app:boxBackgroundMode="filled"
                app:boxBackgroundColor="?colorSecondaryContainer">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etTipus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="?colorOnSecondaryContainer"
                    android:inputType="textCapWords" />
            </com.google.android.material.textfield.TextInputLayout>

            <Space
                android:layout_width="8dp"
                android:layout_height="wrap_content" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:hint="Capacitat"
                app:boxBackgroundMode="filled"
                app:boxBackgroundColor="?colorSecondaryContainer">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etCapacitat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="?colorOnSecondaryContainer"
                    android:inputType="number" />
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Color"
            android:layout_marginBottom="20dp"
            app:boxBackgroundMode="filled"
            app:boxBackgroundColor="?colorSecondaryContainer">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etColor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="?colorOnSecondaryContainer"
                android:inputType="textCapWords" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="?colorSecondary"
            android:textStyle="italic"
            android:text="Documentació tècnica"
            android:textSize="22sp"
            android:layout_marginBottom="18dp"
            />

        <ImageButton
            android:id="@+id/btnSeleccionarDoc"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:src="@drawable/baseline_file_upload_24"
            android:layout_marginBottom="20dp"
            app:tint="?colorOnTertiaryContainer"
            android:backgroundTint="?colorTertiaryContainer"
            android:background="@drawable/roundcorner"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider"
            android:layout_marginVertical="20dp" />

        <Button
            android:id="@+id/btnAcceptar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Aplica els canvis"
            android:textAllCaps="false"
            android:backgroundTint="?colorPrimary"
            android:textColor="?colorOnPrimary"
            android:layout_marginBottom="12dp" />

        <Button
            android:id="@+id/btnCancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cancel·lar"
            android:textAllCaps="false"
            android:background="@drawable/outlined_button"
            android:textColor="?colorPrimary" />
    </LinearLayout>
</ScrollView>